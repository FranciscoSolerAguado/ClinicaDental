            fx:controller="controller.TratamientosPacientesController">
    <children>
        <VBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
              AnchorPane.topAnchor="10.0">
            <children>
                <Label style="-fx-text-fill: #4CAF50;" text="Tratamientos a Pacientes">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
                <TableView fx:id="tratamientosPacientesTable" prefHeight="400.0" prefWidth="780.0">
                    <columns>
                        <TableColumn fx:id="colPaciente" prefWidth="200.0" text="Paciente"/>
                        <TableColumn fx:id="colTratamiento" prefWidth="260.79998779296875" text="Tratamiento"/>
                        <TableColumn fx:id="colFecha" prefWidth="89.5999755859375" text="Fecha"/>
                        <TableColumn fx:id="colDetalles" prefWidth="207.20004882812498" text="Detalles"/>
                    </columns>
                </TableView>
                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="btnAdd" onAction="#abrirFormularioTratamientoPaciente"
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="AÃ±adir"/>
