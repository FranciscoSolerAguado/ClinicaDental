                                text="Editar" onAction="#editarTratamientoPaciente"/>
                        <Button fx:id="btnDelete" style="-fx-background-color: #F44336; -fx-text-fill: white;"
                                onAction="#eliminarTratamientoPaciente" text="Eliminar"/>
                        <Button fx:id="btnBack" onAction="#volver"
                                style="-fx-background-color: #607D8B; -fx-text-fill: white;" text="Volver">
                            <font>
                                <Font size="16.0"/>
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
