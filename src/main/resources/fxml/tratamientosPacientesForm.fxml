<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TratamientosPacientesFormController">
    <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0" AnchorPane.topAnchor="20.0">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="AÃ±adir Tratamiento realizado a paciente" />


        <TextField fx:id="detalles" prefWidth="300.0" promptText="Detalles" />
        <ComboBox fx:id="idPaciente" promptText="Paciente">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></ComboBox>
        <ComboBox fx:id="idTratamiento" promptText="Tratamiento">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></ComboBox>

        <HBox alignment="CENTER" spacing="10.0">
            <Button onAction="#guardarTratamientoPaciente" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Guardar">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></Button>
            <Button onAction="#cancelar" style="-fx-background-color: #F44336; -fx-text-fill: white;" text="Cancelar">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></Button>
        </HBox>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
    </VBox>
</AnchorPane>
