<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #423e3e; -fx-padding: 20px;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DentistaFormController">
    <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="20.0">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="Editar Dentista" textFill="WHITE" />

        <TextField fx:id="nombreField" promptText="Nombre" />
        <TextField fx:id="dniField" promptText="DNI" />
        <TextField fx:id="telefonoField" promptText="Teléfono" />
        <TextField fx:id="nColegiadoField" promptText="Número Colegiado" />
        <TextField fx:id="especialidadField" promptText="Especialidad" />
        <DatePicker fx:id="fechaNacimientoPicker" promptText="Fecha de Nacimiento">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </DatePicker>

        <HBox alignment="CENTER" spacing="10.0">
            <Button onAction="#guardarDentista" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Guardar">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
            <Button onAction="#cancelar" style="-fx-background-color: #F44336; -fx-text-fill: white;" text="Cancelar">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
        </HBox>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </VBox>
</AnchorPane>
