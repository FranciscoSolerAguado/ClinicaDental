<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.SplitPane?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" style="-fx-background-color: #272626;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.MainController">

    <SplitPane orientation="HORIZONTAL" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               dividerPositions="0.166"> <!-- 0.166 ~ 200/1200 -->

        <items>
            <!-- Panel lateral -->
            <VBox alignment="TOP_CENTER" spacing="20" prefWidth="200.0" style="-fx-background-color: #423e3e;">
                <children>
                    <ImageView fitHeight="100" fitWidth="100.0">
                        <image>
                            <Image url="@img/imgSuperior.png" />
                        </image>
                    </ImageView>

                    <Button prefWidth="160"
                            style="-fx-background-color: #1c1a1a; -fx-text-fill: white; -fx-font-family: 'Work Sans'; -fx-background-radius: 10;"
                            text="Pacientes" />
                    <Button prefWidth="160"
                            style="-fx-background-color: #1c1a1a; -fx-text-fill: white; -fx-font-family: 'Work Sans'; -fx-background-radius: 10;"
                            text="Dentistas" />
                    <Button prefWidth="160"
                            style="-fx-background-color: #1c1a1a; -fx-text-fill: white; -fx-font-family: 'Work Sans'; -fx-background-radius: 10;"
                            text="Tratamientos" />
                    <Button prefWidth="160" wrapText="true"
                            style="-fx-background-color: #1c1a1a; -fx-text-fill: white; -fx-font-family: 'Work Sans'; -fx-background-radius: 10;"
                            text="Tratamientos a Pacientes" />
                </children>
            </VBox>

            <!-- Contenido central -->
            <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #272626;">
                <children>
                    <Pane prefHeight="250" prefWidth="200">
                        <children>
                            <ImageView fitHeight="200" fitWidth="219.0" layoutX="388.0">
                                <image>
                                    <Image url="@img/imgCentral.png" />
                                </image>
                            </ImageView>
                        </children>
                    </Pane>

                    <Label maxWidth="400" wrapText="true" textAlignment="CENTER"
                           style="-fx-text-fill: white; -fx-font-family: 'Work Sans';"
                           text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." />
                </children>
            </VBox>
        </items>
    </SplitPane>
</AnchorPane>
