<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PacienteTratamientoController">
    <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0" AnchorPane.topAnchor="20.0">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Tratamientos del Paciente" />
        <ListView fx:id="tratamientosListView" prefHeight="300.0" prefWidth="500.0" />
        <Button onAction="#cerrarVentana" style="-fx-background-color: #F44336; -fx-text-fill: white;" text="Cerrar">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
    </VBox>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</AnchorPane>
