<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane" prefHeight="700.0" prefWidth="1200.0" style="-fx-background-color: #272626;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
    <!-- Barra superior -->
    <HBox fx:id="topBar" prefHeight="40.0"
          style="-fx-background-color: #1c1a1a;"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          alignment="CENTER_LEFT" spacing="10.0">

        <padding>
            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
        </padding>

        <children>
            <!-- Icono -->
            <ImageView fitHeight="24.0" fitWidth="24.0" preserveRatio="true">
                <image>
                    <Image url="@img/imgSuperior.png"/>
                </image>
            </ImageView>

            <!-- Título -->
            <Label text="Bienvenido a tu gestor"
                   style="-fx-text-fill: white; -fx-font-family: 'Work Sans'; -fx-font-size: 14;"/>

            <!-- Espaciador -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- Botón Minimizar -->
            <Button text="—" onAction="#handleMinimize"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16;"
                    mnemonicParsing="false"/>

            <!-- Botón Maximizar / Restaurar -->
            <Button text="❐" onAction="#handleToggleMaximize"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;"
                    mnemonicParsing="false"/>

            <!-- Botón Cerrar -->
            <Button text="✕" onAction="#handleClose"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16;"
                    mnemonicParsing="false"/>
        </children>
    </HBox>




    <!-- SplitPane debajo de la barra superior -->
    <SplitPane dividerPositions="0.12" orientation="HORIZONTAL" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="40.0">

        <items>
            <!-- Panel lateral -->
            <VBox alignment="TOP_CENTER" prefWidth="200.0" spacing="10.0" style="-fx-background-color: #423e3e;">
                <children>
                    <ImageView fitHeight="81.0" fitWidth="100.0" opacity="0.75" preserveRatio="true">
                        <image>
                            <Image url="@img/imgSuperior.png" />
                        </image>
                        <VBox.margin>
                            <Insets top="30.0" />
                        </VBox.margin>
                    </ImageView>
                    <Label text="Gestor de tu clínica dental" textFill="WHITE">
                        <VBox.margin>
                            <Insets bottom="30.0" />
                        </VBox.margin>
                    </Label>

                    <Button prefHeight="34.0" prefWidth="181.0" style="-fx-background-color: #690230; -fx-text-fill: white; -fx-font-family: 'Work Sans'; -fx-background-radius: 5; -fx-alignment: CENTER_LEFT;" text="Pacientes">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                    </Button>

                    <Button prefHeight="31.0" prefWidth="181.0" style="-fx-background-color: #690230; -fx-text-fill: white; -fx-font-family: 'Work Sans'; -fx-background-radius: 5; -fx-alignment: CENTER_LEFT;" text="Dentistas">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                    </Button>

                    <Button prefHeight="31.0" prefWidth="181.0" style="-fx-background-color: #690230; -fx-text-fill: white; -fx-font-family: 'Work Sans'; -fx-background-radius: 5; -fx-alignment: CENTER_LEFT;" text="Tratamientos">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                    </Button>

                    <Button prefHeight="31.0" prefWidth="181.0" style="-fx-background-color: #690230; -fx-text-fill: white; -fx-font-family: 'Work Sans'; -fx-background-radius: 5; -fx-alignment: CENTER_LEFT;" text="Tratamientos a Pacientes" wrapText="true">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                    </Button>
                </children>
            </VBox>

            <!-- Contenido central -->
            <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #272626;">
                <children>
                    <ImageView fitHeight="200" fitWidth="219.0" opacity="0.5" preserveRatio="true">
                        <image>
                            <Image url="@img/imgCentral.png" />
                        </image>
                    </ImageView>

                    <Label maxWidth="400" opacity="0.5" style="-fx-text-fill: white; -fx-font-family: 'Work Sans';" text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." textAlignment="CENTER" wrapText="true" />
                </children>
            </VBox>
        </items>
    </SplitPane>
</AnchorPane>
